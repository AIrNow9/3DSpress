<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Booking confirmed</title>
  <style>
    body { font-family: Arial, Helvetica, sans-serif; max-width: 720px; margin: 2rem auto; }
  </style>
</head>
<body>
  <h1>Booking Confirmed</h1>
  <p>Booking ID: <strong><%= booking.id %></strong></p>
  <p>Name: <%= booking.name %></p>
  <p>Phone: <%= booking.phone %></p>
  <p>Pickup: <%= booking.pickup %></p>
  <p>Dropoff: <%= booking.dropoff %></p>
  <p>When: <%= booking.datetime %></p>
  <% if (booking.notes) { %><p>Notes: <%= booking.notes %></p><% } %>
  <% if ((booking.is_special && booking.special_type) || booking.special_type) { %>
    <p>Special type: <%= booking.special_type %></p>
    <p>Discount: $<%= booking.discount %></p>
  <% } %>
  <p>Driver ID: <%= booking.driverId || booking.driverid %></p>
</body>
</html>